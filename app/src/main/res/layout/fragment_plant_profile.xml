<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

        <LinearLayout
            android:id="@+id/plant_profile_Layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="50dp"
            android:layout_marginTop="150dp">

            <LinearLayout
                android:id="@+id/nameLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="Name"/>

                <TextView
                    android:id="@+id/plantName"
                    android:layout_width="180dp"
                    android:layout_height="30dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/typeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="Type"/>

                <TextView
                    android:id="@+id/plantType"
                    android:layout_width="180dp"
                    android:layout_height="30dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/descriptionLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:text="Description"/>

                <TextView
                    android:id="@+id/description"
                    android:layout_width="150dp"
                    android:layout_height="30dp"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/routines_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Routines"
            app:layout_constraintTop_toBottomOf="@id/plant_profile_Layout"
            app:layout_constraintStart_toStartOf="@id/plant_profile_Layout"
            android:layout_marginTop="40dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/routinesRecyclerView"
            android:scrollbars="vertical"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/routines_tv"
            app:layout_constraintStart_toStartOf="@id/plant_profile_Layout"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/editPlantButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            app:layout_constraintTop_toBottomOf="@id/routinesRecyclerView"
            app:layout_constraintEnd_toEndOf="@id/plant_profile_Layout"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>